<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .table-container {
        margin-top: 40px;
      }
      h3 {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h3 class="text-center">Admin Dashboard</h3>
      <p class="text-center">Manage User Data</p>

      <div class="table-container">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(user) { %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td>
                <!-- You can add edit/delete functionality here -->
                <a
                  href="/user/edit/<%= user._id %>"
                  class="btn btn-warning btn-sm"
                  >Edit</a
                >
                <a
                  href="/user/delete/<%= user._id %>"
                  class="btn btn-danger btn-sm"
                  >Delete</a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="text-center">
        <a href="/auth/logout" class="btn btn-danger mt-3">Logout</a>
      </div>
    </div>
  </body>
</html>
